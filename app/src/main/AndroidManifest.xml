<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unidad.gymapp">

    <!-- Permisos para grabar video -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.GymApp">

        <!-- Launcher: debe estar exportada para recibir la intenciÃ³n MAIN/LAUNCHER -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Otras pantallas internas -->
        <activity android:name=".HomeActivity"/>
        <activity android:name=".MondayActivity"/>
        <activity android:name=".TuesdayActivity"/>
        <activity android:name=".WednesdayActivity"/>
        <activity android:name=".ThursdayActivity"/>
        <activity android:name=".FridayActivity"/>
        <activity android:name=".SaturdayActivity"/>
        <activity android:name=".SundayActivity"/>
        <activity android:name=".RegisterActivity"/>

    </application>
</manifest>
