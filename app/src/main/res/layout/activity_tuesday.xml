<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF5FB"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Martes · Active Rest"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardio · Movilidad · Core · 40-50 min"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Calentamiento -->
        <TextView
            android:id="@+id/tvWarmupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calentamiento (5 min)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvWarmupDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caminata rápida + movilidad articular"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Ejercicio 1: Cardio -->
        <TextView
            android:id="@+id/tvExercise1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardio"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvExercise1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bicicleta estática o elíptica"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvExercise1Sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 min · Intensidad moderada"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Ejercicio 2: Movilidad -->
        <TextView
            android:id="@+id/tvExercise2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movilidad"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvExercise2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estiramientos dinámicos"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvExercise2Sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 series · 10 repeticiones cada ejercicio"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Ejercicio 3: Core -->
        <TextView
            android:id="@+id/tvExercise3Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Core"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvExercise3Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plancha · Russian twists · Leg raises"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvExercise3Sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3×30s · 3×15 · 3×12 · Desc 30s"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Extras -->
        <TextView
            android:id="@+id/tvExtrasTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extras"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvExtrasDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movilidad de hombros 2×10 · Respiración diafragmática"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Alimentación Recomendada -->
        <TextView
            android:id="@+id/tvNutritionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alimentacion Recomendada"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Económica -->
        <TextView
            android:id="@+id/tvEcoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Económica"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvEcoDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avena con plátano · huevo revuelto · leche"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Muscle -->
        <TextView
            android:id="@+id/tvMuscleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscle"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvMuscleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pescado · camote · batido de proteínas"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Vegetariana -->
        <TextView
            android:id="@+id/tvVegTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vegetariana"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvVegDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garbanzos · quinoa · ensalada de vegetales"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Duración -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duración ≈ 40-50 min\nDescansos 30-60s"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Botón Atrás -->
        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:backgroundTint="#9C27B0"
            android:text="Atrás"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>