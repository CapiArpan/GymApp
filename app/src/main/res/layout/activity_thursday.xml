<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_thursday_gradient">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarthursday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="jueves – Lower"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Warm-up Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Calentamiento (5 min)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etWarmup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita los ejercicios..."
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ejercicios Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ejercicios"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Isquiotibles -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_Isquiotibiales"
                            android:contentDescription="Ejercicio 1" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="1. Isquiotibles"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/etHip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Escribe o edita los ejercicios..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Gluteos -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_patadadeburro"
                            android:contentDescription="Ejercicio 2" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="2. Glúteos"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/etCalf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Escribe o edita los ejercicios..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Cuádriceps -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_estocada"
                            android:contentDescription="Ejercicio 3" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="3. Cuádriceps"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/etQuad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Escribe o edita los ejercicios..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nutrición + Timing Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Nutrición -->
                    <TextView
                        android:text="Nutrición recomendada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etNutrition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita las recomendaciones..."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>

                    <!-- Timing -->
                    <TextView
                        android:text="Timing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/etTiming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duración entrenamiento"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Botón para volver al Home -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#212121"
                android:text="Atrás"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
