<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sunday_gradient">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarThursday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Jueves – Rutina"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Warm-up Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Warm-up (5 min)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etWarmup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita los ejercicios..."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ejercicios Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ejercicios Principales"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Pecho -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieChest"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoChest"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/chestButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteChest"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🗑️"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordChest"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🎥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Pecho"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etChest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de pecho..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Espalda -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieBack"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoBack"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/backButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteBack"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🗑️"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordBack"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🎥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Espalda"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etBack"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de espalda..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Piernas -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieLegs"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoLegs"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/legsButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteLegs"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🗑️"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordLegs"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="🎥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Piernas"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etLegs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de piernas..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nutrición y Timing Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nutrición recomendada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etNutrition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita los consejos..."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:text="Timing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/etTiming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Duración entrenamiento..."
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón para volver al Home -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#212121"
                android:text="Atras"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Zoom -->
    <FrameLayout
        android:id="@+id/zoomOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#AA000000" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
