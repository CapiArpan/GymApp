<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sunday_gradient">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarFriday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Viernes â€“ Upper Body"
            app:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Warm-up Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Warm-up (5 min)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etWarmup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita los ejercicios..."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ejercicios Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Ejercicios"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Ejercicio: Hombros -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieShoulders"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoShoulders"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />


                            <LinearLayout
                                android:id="@+id/shouldersButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteShoulders"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸ—‘ï¸"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordShoulders"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸŽ¥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Hombros"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etShoulders"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de hombros..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>


                    <!-- Ejercicio: TrÃ­ceps -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieTriceps"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoTriceps"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />


                            <LinearLayout
                                android:id="@+id/tricepsButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteTriceps"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸ—‘ï¸"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordTriceps"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸŽ¥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="TrÃ­ceps"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etTriceps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de trÃ­ceps..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Ejercicio: Core -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottieCore"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:lottie_rawRes="@raw/rest_day_animation"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />

                            <VideoView
                                android:id="@+id/videoCore"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:visibility="gone" />


                            <LinearLayout
                                android:id="@+id/coreButtonGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:weightSum="2">

                                <Button
                                    android:id="@+id/btnDeleteCore"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸ—‘ï¸"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:backgroundTint="@android:color/holo_red_light"
                                    android:textColor="@android:color/white" />

                                <Button
                                    android:id="@+id/btnRecordCore"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_weight="1"
                                    android:text="ðŸŽ¥"
                                    android:textSize="12sp"
                                    android:padding="4dp"
                                    android:backgroundTint="@android:color/holo_blue_light"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:text="Core"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#212121"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/etCore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ejercicios de core..."
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:gravity="top"
                                android:background="@android:drawable/edit_text"
                                android:padding="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NutriciÃ³n y Timing Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="NutriciÃ³n recomendada"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etNutrition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Escribe o edita los consejos..."
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:text="Timing"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:id="@+id/etTiming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DuraciÃ³n entrenamiento..."
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BotÃ³n para volver al Home -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#212121"
                android:text="Atras"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Zoom -->
    <FrameLayout
        android:id="@+id/zoomOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#AA000000" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
