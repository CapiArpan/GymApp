<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym_bg_gradient_no_green"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con logo y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="#FFFFFF"
                android:contentDescription="Logo GymApp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ÚNETE A NOSOTROS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comienza tu transformación fitness"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Tarjeta de formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear Cuenta"
                    android:textColor="#FF6B35"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre completo"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Correo -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Teléfono -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fecha de Nacimiento -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Peso -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Peso (kg)"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPeso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Altura -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Altura (cm)"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAltura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Género -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Género"
                    android:textColor="#FF6B35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgGenero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbMasculino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Masculino"
                        android:textColor="#212121"
                        android:buttonTint="#FF6B35" />

                    <RadioButton
                        android:id="@+id/rbFemenino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Femenino"
                        android:textColor="#212121"
                        android:buttonTint="#FF6B35" />
                </RadioGroup>

                <!-- Objetivo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objetivo"
                    android:textColor="#FF6B35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spObjetivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Entrenador -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrenador"
                    android:textColor="#FF6B35"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spEntrenador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Teléfono del entrenador -->
                <TextView
                    android:id="@+id/tvTelefonoEntrenador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono entrenador: -"
                    android:textColor="#4ECDC4"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#FF6B35"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirmar contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    app:boxBackgroundColor="#FFF9F2"
                    app:boxStrokeColor="#FF6B35"
                    app:hintTextColor="#FF6B35"
                    app:startIconTint="#FF6B35"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#FF6B35"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmarContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón de registro -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="EMPEZAR AHORA"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="28dp"
                    app:iconGravity="textStart"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#FF6B35"
                    android:elevation="4dp"
                    app:rippleColor="#E85A2C" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opción de redirección a login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes una cuenta? "
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión"
                android:textColor="#4ECDC4"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Separador decorativo -->
        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:background="#4ECDC4"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
